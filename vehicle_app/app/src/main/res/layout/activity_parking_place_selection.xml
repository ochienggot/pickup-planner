<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nicholasgot.citypulse.androidapp.ParkingPlaceSelectionActivity" >

    <fragment
        android:id="@+id/parkingPlaceSelectionMap"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/parkingPlaceselectionSelectButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/parkingPlaceselectionSelectButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="Select" />

    <Button
        android:id="@+id/parkingPlaceSelectionGoToRoute"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/parkingPlaceselectionSelectButton"
        android:layout_alignBottom="@+id/parkingPlaceselectionSelectButton"
        android:layout_toRightOf="@+id/parkingPlaceselectionSelectButton"
        android:text="Route" />

</RelativeLayout>